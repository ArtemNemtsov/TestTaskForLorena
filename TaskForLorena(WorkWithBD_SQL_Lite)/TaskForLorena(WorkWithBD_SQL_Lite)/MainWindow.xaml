<Window x:Class="TaskforLorena_work_with_DBSQLite_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Получение данных из БД" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid Background="#FFCBCBCB" Width="501">
        <ComboBox Height="35" HorizontalAlignment="Left" Margin="12,98,0,0" Name="Сhoice" VerticalAlignment="Top" Width="141" SelectionChanged="comboBox1_SelectionChanged" Cursor="Hand" FontSize="22">
            <ComboBox.ContextMenu>
                <ContextMenu />
            </ComboBox.ContextMenu>
        </ComboBox>
        <Label Content="Выберите город" Height="30" HorizontalAlignment="Left" Margin="12,37,0,0" Name="label1" VerticalAlignment="Top" Width="135" Foreground="#FF453636" Background="{x:Null}" FontSize="14"></Label>
        <TextBox Height="35" HorizontalAlignment="Left" Margin="186,98,0,0" Name="textBox1" VerticalAlignment="Top" Width="127" Cursor="Hand" TextChanged="textBox1_TextChanged" FontSize="22" />
        <Label Background="{x:Null}" Content="Укажите цену (руб)" Foreground="#FF453636" Height="30" Margin="193,37,188,0" Name="label2" VerticalAlignment="Top" FontSize="12" />
        <Label Background="{x:Null}" Content="Результат:" Foreground="#FF453636" Height="30" HorizontalAlignment="Right" Margin="0,37,46,0" Name="label3" VerticalAlignment="Top" Width="93" FontSize="14" />
        <TextBlock Height="35" HorizontalAlignment="Right" Margin="0,98,30,0" Name="textBlock1" Text="result" VerticalAlignment="Top" Width="117" FontSize="22" Background="#FFDBDBDB" />
        <Button Content="Получить результат!" Height="35" HorizontalAlignment="Left" Margin="193,0,0,58" Name="button1" VerticalAlignment="Bottom" Width="120" Click="button1_Click" Cursor="Hand" />
        <ProgressBar Height="10" HorizontalAlignment="Left" Margin="0,74,0,0" Name="progressBar1" VerticalAlignment="Top" Width="503" />
    </Grid>
</Window>
