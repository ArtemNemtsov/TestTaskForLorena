<Window x:Class="Lorena.MainWindow"
        WindowStartupLocation ="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Получение данных из БД" Height="528.49" Width="589.673" Loaded="Window_Loaded">
    <Grid Background="#FFCBCBCB" Margin="1.5,0,-7.755,-31.469" Height="528.469" VerticalAlignment="Top">
        <Label Content="Выбор" Height="30" HorizontalAlignment="Left" Margin="76.775,39,0,0" Name="label1" VerticalAlignment="Top" Width="70" Foreground="#FF453636" Background="{x:Null}" FontSize="14"></Label>
        <TextBox Height="35" HorizontalAlignment="Right" Margin="0,106.49,210.827,0" Name="textBox1" VerticalAlignment="Top" Width="127" Cursor="Hand" TextChanged="textBox1_TextChanged" FontSize="22" />
        <Label Background="{x:Null}" Content="Укажите цену (руб)" Foreground="#FF453636" Height="30" Margin="250.938,39,210.572,0" Name="label2" VerticalAlignment="Top" FontSize="12" />
        <Label Background="{x:Null}" Content="Результат:" Foreground="#FF453636" Height="30" HorizontalAlignment="Right" Margin="0,39,65.316,0" Name="label3" VerticalAlignment="Top" Width="83.449" FontSize="14" />
        <Button Content="Записать в БД" Height="47.525" HorizontalAlignment="Left" Margin="244.174,0,0,64.13" x:Name="BtnWriteData" VerticalAlignment="Bottom" Width="127.255" Click="BtnWriteDataClick" Cursor="Hand" />
        <ProgressBar Height="19" Margin="0,74,0.127,0" Name="progressBar1" VerticalAlignment="Top" />
        <TextBox Cursor="Hand" FontSize="22" Height="35" HorizontalAlignment="Right" Margin="0,106.49,45.153,0" Name="tbDiscountedPrice" VerticalAlignment="Top" Width="127" IsEnabled="True" IsReadOnly="True" />
        <TreeView Name="treebase" HorizontalAlignment="Left" Height="241.695" VerticalAlignment="Top" Width="177.999" Margin="26.853,106.49,0,0"   FontSize="20" Cursor="Hand" SelectedItemChanged="treebase_SelectedItemChanged"/>
        <Button Name="CloseProgram" Content="Выход" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="127" Height="47.525" Click="CloseProgramClick" Cursor="Hand" Margin="415.847,416.345,0,0" RenderTransformOrigin="0.512,0.516"/>
        <ProgressBar Height="19" Margin="-9.49,368.316,10.127,0" x:Name="progressBar1_Copy" VerticalAlignment="Top" RenderTransformOrigin="0.512,0.579" />
        <Button x:Name="AddDepartment" Content="Добавить новый магазин" HorizontalAlignment="Left" Height="47.525" Margin="37.52,416.345,0,0" VerticalAlignment="Top" Width="156.667" Click="AddDepartment_Click"/>
    </Grid>
</Window>
